aside.main-sidebar.sidebar-dark-primary.elevation-4.sidebar-dark-warning
  a.brand-link.navbar-orange(href='/')
    img.brand-image.img-circle.elevation-3(src='/logo128.png', alt='Logo', style='opacity: .8')
    span.brand-text.font-weight-light Smart HOME
  .sidebar#sidebar
    nav.mt-2
      ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview', role='menu', data-accordion='false')
        li.nav-item
          a.nav-link(href='/')
            i.nav-icon.fas.fa-tachometer-alt
            p Dashboard
        each item in devices.online
          li.nav-item
            a.nav-link(href=`/device/${item.Name}`)
              i(class=`nav-icon fas ${item.Icon}`)
              p= item.DisplayName

        if devices.offline.length
          li.nav-header OFFLINE
          each item in devices.offline
            li.nav-item
              a.nav-link(href=`/device/${item.Name}`)
                i(class=`nav-icon fas ${item.Icon}`)
                p= item.DisplayName


        li.nav-header SYSTEM
        if HasPermission('Users') || HasPermission('RuleCode') || HasPermission('Restart')
          li.nav-item
            a.nav-link(href='/settings')
              i.nav-icon.fas.fa-wrench
              p Settings

        li.nav-item
          a.nav-link(href='/logout')
            i.nav-icon.fas.fa-lock
            p Logout
