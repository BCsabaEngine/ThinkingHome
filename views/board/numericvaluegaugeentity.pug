extends _entity

block list
  .row
    .col-md-12
      span
        = name
      span.float-right.mr-3
        = entity.value
        | 
        small
          = entity.unit

block group
  .btn.btn-app-placeholder.arrow.m-2
    i(class=entity.icon)
    = name
    br
    h6
      = entity.value
      | 
      small
        = entity.unit

block single
  input.knob(data-readOnly=true type='text' data-thickness='0.2' data-anglearc='250' data-angleoffset='-125' value=entity.value data-min=entity.minvalue data-max=entity.maxvalue data-unit=entity.unit data-width='40%' data-fgcolor='#17a2b8')
  br
  i.fa-2x(id=unique + "_s_i" class="ui_" + entity.device.name + "_" + entity.code class=entity.icon)
  | 
  = name


block all
  script(type='text/javascript').
    var stateiconon = '#{entity.stateiconon}';
    var stateiconoff = '#{entity.stateiconoff}';
  script(type='text/javascript').
    $('##{unique}_li').on('valuechanged', function (e, data) 
    {
      $('##{unique}_li').prop('checked', data.value ? true : false);
    });
    $('##{unique}_gr').on('valuechanged', function (e, data) 
    {
      if (data.value)
        $('##{unique}_gr').addClass("btn-border-info");
      else
        $('##{unique}_gr').removeClass("btn-border-info");
    });
    $('##{unique}_s').on('valuechanged', function (e, data) 
    {
      if (data.value)
      {
        $('##{unique}_s_i').removeClass('text-default').addClass('text-primary');
        $('##{unique}_s_i').removeClass(stateiconoff).addClass(stateiconon);
      }
      else
      {
        $('##{unique}_s_i').removeClass('text-primary').addClass('text-default');
        $('##{unique}_s_i').removeClass(stateiconon).addClass(stateiconoff);
      }
    });
