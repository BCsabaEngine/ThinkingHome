{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "no-console": 2,
      "no-unreachable-loop": 2,

      "class-methods-use-this": 2,
      "consistent-return": 2,
      "default-case": 2,
      "default-case-last": 2,
      "no-constructor-return": 2,
      "no-empty-function": 2,
      "no-eq-null": 2,
      "no-extra-bind": 2,
      "no-labels": 2,
      "no-magic-numbers": 2,
      "no-multi-spaces": 2,
      "no-new-func": 2,
      "no-new-wrappers": 2,
      "no-param-reassign": 2,
      "no-unused-expressions": 2,
      "no-useless-return": 2,
      "yoda": 2,

      "camelcase": 2,
      "no-multiple-empty-lines": 2,
      "no-new-object": 2,
      
      "no-var": 2,
      "prefer-const": 2,
      "prefer-rest-params": 2,
      
      "no-extra-parens": 1
    }
}
